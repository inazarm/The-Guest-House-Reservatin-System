@model TheHouse.Models.tbl_House

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <h2>Edit Guest House Details</h2>
        @using (Html.BeginForm("Edit", "House", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>House Details</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.H_ID)
                @Html.HiddenFor(model => model.H_Image)
                @Html.HiddenFor(model => model.FK_UserID)

                <div class="form-group">
                    <label class="control-label col-md-2"> Hotel Name</label>
                    <div class="col-md-8">

                        @Html.EditorFor(model => model.H_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.H_Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2"> Location</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.H_Location, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.H_Location, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2"> City</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.H_City, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.H_City, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2"> Address</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.H_Address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.H_Address, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2"> No. Of Rooms</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.H_NoOfRoom, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.H_NoOfRoom, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2"> Hotel Image</label>
                    <div class="col-md-5">
                        <img src="~/Content/HotelImg/@Model.H_Image" height="100" , width="90" class="img img-rounded" />
                        <input type="file" name="HotelImg" class="form-control" />
                        @Html.ValidationMessageFor(model => model.H_Image, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2"> Status</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.H_Status, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.H_Status, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </section>
</section>
