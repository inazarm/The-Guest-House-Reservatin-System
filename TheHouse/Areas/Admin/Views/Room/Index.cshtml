@model IEnumerable<TheHouse.Models.tbl_RoomsDetails>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <h4 class="text-uppercase"><i class="fa fa-home"></i> Room Details </h4>
            <div class="fa fa-plus-circle"><span class="text-uppercase">@Html.ActionLink("Add Room Details", "Create")</span></div><hr>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th><i class=" fa fa-square"></i> Image</th>
                        <th><i class=" fa fa-square"></i> Room Number</th>
                        <th><i class="fa fa-home"></i> Type</th>
                        <th><i class="fa fa-arrow-circle-down"></i> Capacity </th>
                        <th><i class="fa fa-audio-description"></i> Description</th>
                        <th><i class="fa fa-edit"></i> Status</th>
                        <th><i class="fa fa-edit"></i> Action</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.R_Image)</td>
                            <td>@Html.DisplayFor(modelItem => item.tbl_Type.Type_Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.R_Capacity) </td>
                            <td>@Html.DisplayFor(modelItem => item.R_Desc) </td>
                            <td>@Html.DisplayFor(modelItem => item.R_Status) </td>
                            


                            <td>
                                <a href="@Url.Action("Edit",new{id=item.R_Id})"><span class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></span></a>
                                <a href="@Url.Action("Delete",new{id=item.R_Id})"><span class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i></span></a>
                            </td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
        <!-- /content-panel -->
    </div>
    <!-- /col-md-12 -->
</div>


