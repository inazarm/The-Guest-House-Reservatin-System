@model TheHouse.Models.tbl_Guest

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Site/Views/Shared/_Layout.cshtml";
}
<section class="breadcrumb_area">
    <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background=""></div>
    <div class="container">
        <div class="page-cover text-center">
            <h2 class="page-cover-tittle">Guest Login Information</h2>
        </div>
    </div>
</section>
<br />
<div class="container register">
    <div class="row">
        <div class="col-md-2 register-left">
        </div>
        <div class="col-md-9 register-right">
            <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" role="tab" aria-controls="home" aria-selected="true"><b class="text-uppercase">Please Login here</b></a>
                </li>
                <li style="padding-left:500px"></li>
            </ul>
            <!--================Breadcrumb Area =================-->
            @using (Html.BeginForm("Index", "LoginGuest", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <h3 class="register-heading"></h3>
                        <div class="row register-form">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <div class="col-md-7">
                                        @Html.EditorFor(model => model.G_Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Email", @type="Email", @Required="True", @Autofocus="True" } })
                                        @Html.ValidationMessageFor(model => model.G_Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-7">
                                        @Html.EditorFor(model => model.G_Pass, new { htmlAttributes = new { @class = "form-control", @type = "Password", @placeholder = "Enter Password",@Required="True" } })
                                        @Html.ValidationMessageFor(model => model.G_Pass, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-7">
                                        @if (ViewBag.Error!=null)
                                        {
                                            <p class="alert-danger">@ViewBag.Error</p>
                                        }
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-7">
                                        <input type="submit" class="btn btn-dark" value="Sign In" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

