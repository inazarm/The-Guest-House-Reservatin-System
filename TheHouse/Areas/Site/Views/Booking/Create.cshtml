@model TheHouse.Models.tbl_Booking

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Site/Views/Shared/_Layout.cshtml";
}

<section class="breadcrumb_area">
    <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background=""></div>
    <div class="container">
        <div class="page-cover text-center">
            <h2 class="page-cover-tittle">Booking Information</h2>
        </div>
    </div>
</section>
<br />
<div class="container register">
    <div class="row">
        <div class="col-md-2 register-left">
        </div>
        <div class="col-md-9 register-right">
            <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" role="tab" aria-controls="home" aria-selected="true"><b class="text-uppercase">Please Fill Booking Information</b></a>
                </li>
                <li style="padding-left:500px"></li>
            </ul>
            <!--================Breadcrumb Area =================-->
            @using (Html.BeginForm("Create", "Booking", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <h3 class="register-heading"></h3>
                        <div class="row register-form">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ArrivalDate, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.ArrivalDate, new { htmlAttributes = new { @class = "form-control", @type = "Date"} })
                                        @Html.ValidationMessageFor(model => model.ArrivalDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.DepartureDate, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.DepartureDate, new { htmlAttributes = new { @class = "form-control",@type = "Date" } })
                                        @Html.ValidationMessageFor(model => model.DepartureDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label col-md-2">Total Person</label>
                            
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.TotalPerson, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TotalPerson, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input type="submit" class="btn btn-dark" value="Proceed To Payment" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                }
        </div>
    </div>
</div>
