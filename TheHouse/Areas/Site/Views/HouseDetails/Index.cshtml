@model TheHouse.Models.tbl_House
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Site/Views/Shared/_Layout.cshtml";
}
@{ 
    TheHouse.Models.TheHouseEntities obj = new TheHouse.Models.TheHouseEntities();
    var Rooms = obj.tbl_RoomsDetails.ToList();
}
<!--================Breadcrumb Area =================-->
<section class="breadcrumb_area">
    <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background=""></div>
    <div class="container">
        <div class="page-cover text-center">
            <h2 class="page-cover-tittle">@Model.H_Name</h2>
            <ol class="breadcrumb">
                <li><a href="index.html"></a></li>
                <li class="active">Rooms Details</li>
            </ol>
        </div>
    </div>
</section>
<!--================Breadcrumb Area =================-->
<!--================ House Rooms Details Area =================-->
<section class="blog_categorie_area">
    <div class="container">
        <div class="row">
            @foreach (var item in Rooms)
            {
                <div class="col-lg-4">
                    <div class="categories_post">
                        <img src="~/Content/RoomImages/@item.R_Image" alt="post">
                        <div class="categories_details">
                            <div class="categories_text">
                                <a href="blog-details.html"><h5>@item.tbl_Type.Type_Name</h5></a>
                                <div class="border_line"></div>
                                <p>@item.R_Desc</p>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<!--================House Rooms Details Area =================-->
